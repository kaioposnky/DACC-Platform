<?xml version="1.0" encoding="utf-8"?>
<!-- Query para add Avaliacao em um produto -->
<queries>
    <query name="CreateAvaliacao">
        <!-- Cria um elemento nessa tabela que vincula Avaliacao com Usuário-->
        INSERT INTO Avaliacao_Usuario(UserId, ProductId)
        VALUES (@UserId, @ProductId);

        <!-- Adiciona a Avaliação de fato -->
        INSERT INTO Avaliacao(Rating, Commentary, ProductId, UserId, State, DatePosted)
        VALUES (@Rating, @Commentary, @ProductId, @UserId, @State, @DatePosted);
    </query>
<!--    Querry para obter todas as avaliações-->
    <query name="GetAllAvaliacoes">
        SELECT * FROM Avaliacoes;
    </query>
<!--    Query para obter as avaliacoes de um produto especifico-->
    <query name="GetAvalicoesProductId">
        SELECT * FROM Avaliacoes WHERE ProductId = @Id;
    </query>
<!--    Query para obter as avaliacoes de um usuario-->
    <query name="GetProductAvaliacaoUserByUserId">
        SELECT * FROM Avaliacoes WHERE UserId = @Id;
    </query>
    
</queries>

